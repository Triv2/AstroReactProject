---
import PerkCard from "../PerkCard.astro";   

---
<section id="Perks" class="view gridPerk">

    <PerkCard
      title="Perk One"
      img="/example.svg"
    />
    <PerkCard
      title="Perk Two"
      img="/example.svg"
    />
    <PerkCard
      title="Perk Three"
      img="/example.svg"
    />
    <PerkCard
      title="Perk Four"
      img="/example.svg"
      />


</section>
<style>
  * {
  box-sizing: border-box;
}


.gridPerk {
  --track: 1;
  display: grid;
  max-width: 85rem;
  width: 100%;
  transition: grid-template 300ms;
}

.item {
  --i: 0.5rem;
 
  background: url("/aboutbg1.svg");
  display: grid;
  place-items: center;
  grid-template: 1fr / 1fr var(--innerTrack, 0);
  overflow: hidden;
  aspect-ratio: 8 / 3;
  transition: filter 200ms;
}



.gridPerk:has(.item:first-child:hover) .item:not(:first-child),
.gridPerk:has(.item:nth-child(2):hover) .item:not(:nth-child(2)),
.gridPerk:has(.item:nth-child(3):hover) .item:not(:nth-child(3)),
.gridPerk:has(.item:nth-child(4):hover) .item:not(:nth-child(4)) {
  filter: grayscale(10%) brightness(250%) contrast(30%);
}

.gridPerk:has(.item:first-child:hover) .item:not(:first-child) p,
.gridPerk:has(.item:nth-child(2):hover) .item:not(:nth-child(2)) p,
.gridPerk:has(.item:nth-child(3):hover) .item:not(:nth-child(3)) p,
.gridPerk:has(.item:nth-child(4):hover) .item:not(:nth-child(4)) p {
  opacity: 0;
}

@media (min-width: 50em) {
  .gridPerk {
    grid-template: 1fr 1fr / 1fr 1fr;
    aspect-ratio: 2 / 1;
  }
  
  .item {
    aspect-ratio: auto;
  }
  
  .gridPerk:has(.item:first-child:hover) {
    grid-template: var(--track) 1fr / var(--track) 1fr;
  }

  .gridPerk:has(.item:nth-child(2):hover) {
    grid-template: var(--track) 1fr / 1fr var(--track);
  }

  .gridPerk:has(.item:nth-child(3):hover) {
    grid-template: 1fr var(--track) / var(--track) 1fr;
  }

  .gridPerk:has(.item:nth-child(4):hover) {
    grid-template: 1fr var(--track) / 1fr var(--track);
  }
}
</style>