---
import FeatureCard from "../FeatureCard.astro";
const article="p-10 flex-auto";
const figure= "mb-10";
const img="aboutimg";
const figcap ="text-2xl";
---
<section id="features" class="features gridcenter flex flex-row gap-10 p-10 view">

  <FeatureCard articleClass={article}
               figureClass={figure}
               imgClass={img}
               figcaptionClass={figcap}
               src="./arm1.svg"
               figcaption= "Feature One brings about all the change you would ever need in your life."
                />

  <FeatureCard articleClass={article}
                figureClass={figure}
                imgClass={img}
                figcaptionClass={figcap}
                src="./arm1.svg"
                figcaption= "Feature Two alters your genome to accept everything we can give.     "
                 />

  <FeatureCard articleClass={article}
                 figureClass={figure}
                 imgClass={img}
                 figcaptionClass={figcap}
                 src="./arm1.svg"
                 figcaption= "Feature Three burns out all your neurons. Depleting your mind of all willpower."
                  />

</section>