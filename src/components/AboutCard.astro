---
const {articleClass,figcaptionClass,imgClass,src,figcaption} = Astro.props;
---

<article class={articleClass}>
  <figcaption class={figcaptionClass}>{figcaption}</figcaption>
  <figure class="flex-auto"><img loading="lazy" 
   
    
    decoding="async"
    class={imgClass} src={src}/></figure>
</article>
<style>
  figcaption {
    margin-left:20px;
    margin-right:20px;
    border-radius:20px;
    font-size:2vw;
  }
  img{
    max-width:300px;
    max-height:300px;
    margin: 0 auto;
    justify-content: center;
    
  }
 
  
@media screen and (max-width:1000px)  {
  
  figcaption{
    max-width:30%;
    font-size:3vw;
  }
  img{
    max-width:30%;
  }
}


  article {
    padding: 50px;
  }
  
</style>
  